# Infura Project ID for Ethereum network interaction
INFURA_PROJECT_ID=your-infura-project-id

# Binance API Credentials
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

# Ethereum Wallet Private Key for deploying/interacting with contracts
PRIVATE_KEY=your-wallet-private-key

# Database URL for backend storage
DATABASE_URL=sqlite://replica_trader.db  # Switch to SQLite for local testing, or keep PostgreSQL URL for production

# Logging Level
RUST_LOG=info  # Adjust to "debug" or "error" as needed

# Supported Tokens (Optional, for multi-token subscriptions)
SUPPORTED_TOKENS=USDT,BNB

# Other optional configurations
TRADE_COOLDOWN_SECONDS=60  # Cooldown period between trades for a user
SLIPPAGE_THRESHOLD=0.01    # Default slippage threshold (1%)